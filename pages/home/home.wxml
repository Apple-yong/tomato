<!--pages/_home/_home.wxml-->
<view class="home-container">
  <scroll-view class="todoList" scroll-y="true">
    <view class="item" wx:for="{{lists}}" wx:key="{{item.id}}" bindtap="destroyTodo" data-index="{{index}}">
      <view class="select {{item.finished && 'active'}}"></view>
      <text>{{item.text}}</text>
    </view>
  </scroll-view>
  <g-button class="createButton" text="创建任务" type="change" bindtap="showConfirm"></g-button>
  <view class="tomato-wrapper">
    <g-clock text="点击开始番茄" bindtap="gotoTomato"></g-clock>
  </view>
  <g-confirm placeholder="我完成了什么" bindconfirm="confirmCreate" bindcancel="hideConfirm" visible="{{visible}}"></g-confirm>
</view>
